@{
  Layout = "_Layout";
}

@using HairSalon.Models
@model List<HairSalon.Models.Client>;

<h1>Full salon client list</h1>
<hr>

@if (@Model.Count == 0)
{
  <h3><em>No clients.</em></h3>
}
else
{
<ul>
  @foreach (Client client in Model)
  {
  <li>@Html.ActionLink($"{client.Name}", "Details", new { id = client.ClientId }) | <em>Stylist: @Html.ActionLink($"{@client.Stylist.Name}", "Details", "Stylists", new { id = client.StylistId})</em></li>
  }
</ul>
}
<hr>
<p>@Html.ActionLink("Add new client", "Create", "Clients")</p>

