@{
  Layout = "_Layout";
}

@model HairSalon.Models.Client

<h4>Register new client</h4>
<p><strong>Clients must be assigned a stylist to be registered.</strong></p>
<p>@Html.ActionLink("Register a new stylist here.", "Create", "Stylists")</p>
<hr>
@using (Html.BeginForm())
{
  @Html.LabelFor(model => model.Name)
  @Html.TextBoxFor(model => model.Name)
  <br>
  @Html.LabelFor(model => model.Description)
  @Html.TextBoxFor(model => model.Description)
  <br>
  @Html.LabelFor(model => model.Stylist)
  @Html.DropDownList("StylistId")
  <br>
  <input type="submit" value="Register client" />
}
<hr>
<p>@Html.ActionLink("To stylist list", "Index", "Stylists")</p>
<p>@Html.ActionLink("To client list", "Index", "Clients")</p>
