@{
  Layout = "_Layout";
}

@using HairSalon.Models;

<h1>Stylist Listing</h1>
<hr>

@if (@Model.Count == 0)
{
  <h3>No stylists registered yet.</h3>
}
<ul>
  @foreach (Stylist stylist in Model)
  {
    <li>@Html.ActionLink($"{stylist.Name}", "Details", new { id = stylist.StylistId })</li>
  }
</ul>
<hr>
<p>@Html.ActionLink("Register new stylist", "Create", "Stylists")</p>
